{
  "name": "web-client-map",
  "version": "0.1.7",
  "repository": "git@github.com:trip-a-trip/web-client-map.git",
  "author": "<igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "pretty": "yarn prettier --write --plugin=prettier-plugin-svelte ./**/*.{js,svelte}",
    "commit": "yarn git-cz",
    "lint:code": "yarn eslint \"./**/*.{js,svelte}\"",
    "lint:styles": "yarn stylelint \"./**/*.svelte\"",
    "lint:size": "yarn build && yarn size-limit",
    "release": "yarn standard-version"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@solid-soda/config": "^2.2.0",
    "@yarnpkg/pnpify": "^2.2.1",
    "effector": "^21.2.2",
    "fastify": "^3.3.0",
    "fastify-http-proxy": "^4.0.4",
    "fastify-static": "^3.2.0",
    "leaflet": "^1.6.0",
    "redaxios": "^0.3.0",
    "rollup": "^2.26.9",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.1",
    "svelte": "^3.24.1",
    "svelte-icons": "^2.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@size-limit/file": "^4.5.7",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.0.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-node": "latest",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "eslint-plugin-unicorn": "^18.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "prettier-plugin-svelte": "^1.2.0",
    "sirv-cli": "^1.0.6",
    "size-limit": "^4.5.7",
    "standard-version": "^7.1.0",
    "stylelint": "^13.3.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0"
  },
  "size-limit": [
    {
      "path": "public/build/bundle*.js"
    }
  ],
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,jsx,scss,css,js,json,md}": [
      "yarn prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "yarn commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
